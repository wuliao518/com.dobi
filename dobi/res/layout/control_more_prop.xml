<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moreProp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:orientation="vertical" >
         <ImageButton
            android:id="@+id/btnCC"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_two"
            android:onClick="btnDaojuOnclick"
            android:src="@drawable/daoju"/>
        <ImageButton
            android:id="@+id/btnTX"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_two"
            android:onClick="btnPetOnclick"
            android:src="@drawable/pet"/>
        <ImageButton
            android:id="@+id/btnSG"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_two"
            android:onClick="btnTextOnclick"
            android:src="@drawable/qipao" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/propListView"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:background="@color/atrous"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#00000000"
        android:dividerHeight="5dp"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</LinearLayout>